<ul class="post-list">
    {{#each tickers as |ticker|}}
    <li class="{{getColorClass ticker.change_percentage}}">
        {{ ticker.ticker }}
        {{ ticker.price }}
        {{ ticker.change_percentage }}
    </li>
    {{/each}}
</ul>
<section class="new-post-section">
    <button type="submit" class="btn" id="create-new-post">+ Create new post</button>
</section>


{{#if posts.length}}
<section>
    <h2>Your Dashboard</h2>
    <ul>
    {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">edit post</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="/javascript/create-post.js"></script>